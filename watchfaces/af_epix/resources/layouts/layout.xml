<layout id="WatchFace">
    <drawable class="Background" />
    <label id="TimeDisplay" x="center" y="center" font="Graphics.FONT_LARGE" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_YELLOW" />
    <label id="ModeDisplay" x="110" y="90" font="Graphics.FONT_MEDIUM" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_GREEN" />
    
    <drawable id="BatteryBarDisplay" class="CircularBar">
     	<param name="percent">1</param>
        <param name="color">0x00AAFF</param>        
        <param name="orientation">180 </param>
        <param name="barThickness">4</param>
        <param name="barGap">1</param>
        <param name="startingRadius">150</param>
    </drawable>
    <drawable id="StepsBarDisplay" class="LongBar">
     	<param name="percent">1</param>
        <param name="color">0xFFAA00</param>        
        <param name="x">100</param>
        <param name="y">100</param>
        <param name="width">180</param>
        <param name="height">8</param>
        <param name="radius">2</param>
    </drawable>
</layout>
